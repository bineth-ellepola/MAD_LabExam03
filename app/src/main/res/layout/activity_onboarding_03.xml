<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Onboarding03Activity">

    <!-- Heading -->
    <TextView
        android:id="@+id/StayMotivatedTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Stay Motivated"
        android:textColor="#20B2AA"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Onboarding Image -->
    <ImageView
        android:id="@+id/onboardingImage3"
        android:layout_width="280dp"
        android:layout_height="250dp"
        android:contentDescription="Motivation illustration"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/onboarding_5"
        app:layout_constraintTop_toBottomOf="@id/StayMotivatedTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <!-- Description -->
    <TextView
        android:id="@+id/StayMotivated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Log your feelings with emojis, set hydration reminders, and keep a positive lifestyle with Healthify."
        android:textSize="16sp"
        android:textColor="#444444"
        app:layout_constraintTop_toBottomOf="@id/onboardingImage3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp"/>

    <!-- Next Button -->
    <Button
        android:id="@+id/nextButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#20B2AA"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:text="Get Started â†’"
        android:textColor="#FFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Skip -->
    <TextView
        android:id="@+id/skipText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="52dp"
        android:text="Skip"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
